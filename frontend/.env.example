# ===========================================
# MYCO FRONTEND - REACT + VITE CONFIGURATION
# ===========================================

# ===========================================
# ENVIRONMENT
# ===========================================
NODE_ENV=development

# ===========================================
# API CONFIGURATION
# ===========================================

# Backend API URL
VITE_API_URL=http://localhost:3001

# WebSocket URL for real-time features
VITE_WS_URL=ws://localhost:3001

# AI Engine URL
VITE_AI_ENGINE_URL=http://localhost:8000

# ===========================================
# AUTHENTICATION
# ===========================================

# Clerk Authentication (Required)
VITE_CLERK_PUBLISHABLE_KEY=your_clerk_publishable_key_here

# For compatibility with some components
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=your_clerk_publishable_key_here

# ===========================================
# FEATURE FLAGS
# ===========================================

# Enable/Disable Frontend Features
VITE_ENABLE_COLLABORATION=true
VITE_ENABLE_AI_ASSISTANT=true
VITE_ENABLE_ADVANCED_TEMPLATES=true
VITE_ENABLE_DEPLOYMENT=true
VITE_ENABLE_AGENTS=true

# ===========================================
# DEVELOPMENT CONFIGURATION
# ===========================================

# Development Port
VITE_PORT=3000

# Enable Hot Module Replacement
VITE_HMR=true

# Development Host
VITE_HOST=0.0.0.0

# ===========================================
# MONITORING & ANALYTICS
# ===========================================

# Sentry Error Tracking (Frontend)
VITE_SENTRY_DSN=your_frontend_sentry_dsn_here

# Google Analytics (Optional)
VITE_GA_TRACKING_ID=your_ga_tracking_id_here

# ===========================================
# EDITOR CONFIGURATION
# ===========================================

# Monaco Editor CDN
VITE_MONACO_CDN=https://cdn.jsdelivr.net/npm/monaco-editor@0.44.0

# Default Editor Theme
VITE_DEFAULT_THEME=vs-dark

# ===========================================
# COLLABORATION FEATURES
# ===========================================

# Socket.IO Configuration
VITE_SOCKET_IO_PATH=/socket.io

# Real-time Collaboration
VITE_ENABLE_REAL_TIME=true

# ===========================================
# BUILD CONFIGURATION
# ===========================================

# Base URL for production builds
VITE_BASE_URL=/

# Build Output Directory
VITE_OUT_DIR=dist

# Asset Directory
VITE_ASSETS_DIR=assets

# ===========================================
# SECURITY
# ===========================================

# Content Security Policy
VITE_CSP_NONCE=

# Enable HTTPS in development (optional)
VITE_HTTPS=false

# ===========================================
# PERFORMANCE
# ===========================================

# Enable Bundle Analyzer
VITE_ANALYZE=false

# Chunk Size Warning Limit (KB)
VITE_CHUNK_SIZE_WARNING_LIMIT=500

# ===========================================
# THIRD-PARTY INTEGRATIONS
# ===========================================

# GitHub Integration (for templates)
VITE_GITHUB_CLIENT_ID=your_github_client_id_here

# File Storage
VITE_MAX_FILE_SIZE=104857600

# Upload Endpoint
VITE_UPLOAD_ENDPOINT=/api/files/upload