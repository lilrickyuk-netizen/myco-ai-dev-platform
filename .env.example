# Myco AI Development Platform - Environment Configuration
# Copy this file to .env and update with your actual values

#===============================================================================
# SYSTEM CONFIGURATION
#===============================================================================

# Environment
NODE_ENV=development
DEBUG=true
LOG_LEVEL=info

# Application URLs
FRONTEND_URL=http://localhost:5173
BACKEND_URL=http://localhost:3000
AI_ENGINE_URL=http://localhost:8000
EXECUTION_ENGINE_URL=http://localhost:8001

#===============================================================================
# DATABASE CONFIGURATION
#===============================================================================

# PostgreSQL (Primary Database)
DATABASE_URL=postgresql://postgres:password@localhost:5432/myco_platform
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=myco_platform
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password

# MongoDB (Document Storage)
MONGODB_URL=mongodb://admin:password@localhost:27017/myco_platform?authSource=admin
MONGODB_HOST=localhost
MONGODB_PORT=27017
MONGODB_DB=myco_platform
MONGODB_USER=admin
MONGODB_PASSWORD=password

# Redis (Cache & Sessions)
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

#===============================================================================
# AUTHENTICATION & SECURITY
#===============================================================================

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Clerk Authentication (Optional)
CLERK_SECRET_KEY=sk_test_your_clerk_secret_key_here
CLERK_PUBLISHABLE_KEY=pk_test_your_clerk_publishable_key_here
CLERK_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Session Configuration
SESSION_SECRET=your-session-secret-key-change-in-production
COOKIE_DOMAIN=localhost
COOKIE_SECURE=false

#===============================================================================
# AI & LLM CONFIGURATION
#===============================================================================

# OpenAI
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=4096
OPENAI_TEMPERATURE=0.7

# Anthropic Claude
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# Google Gemini
GOOGLE_API_KEY=your-google-api-key-here
GOOGLE_MODEL=gemini-pro

# Cohere
COHERE_API_KEY=your-cohere-api-key-here
COHERE_MODEL=command-r-plus

# Local LLM (Ollama)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama2

# AI Engine Configuration
AI_ENGINE_API_KEY=dev-ai-engine-key
AI_ENGINE_MAX_CONCURRENT_REQUESTS=10
AI_ENGINE_TIMEOUT=120000

#===============================================================================
# VECTOR DATABASE & EMBEDDINGS
#===============================================================================

# Weaviate
WEAVIATE_URL=http://localhost:8080
WEAVIATE_API_KEY=
WEAVIATE_SCHEME=http

# Embedding Configuration
EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_DIMENSION=1536
EMBEDDING_BATCH_SIZE=100

#===============================================================================
# EXECUTION ENGINE
#===============================================================================

# Docker Configuration
DOCKER_SOCKET=/var/run/docker.sock
DOCKER_NETWORK=myco_platform
EXECUTION_TIMEOUT=300000
EXECUTION_MEMORY_LIMIT=512m
EXECUTION_CPU_LIMIT=1

# Container Security
CONTAINER_READ_ONLY=true
CONTAINER_NO_NEW_PRIVILEGES=true
CONTAINER_USER=1000:1000

#===============================================================================
# MONITORING & OBSERVABILITY
#===============================================================================

# Prometheus
PROMETHEUS_URL=http://localhost:9090
PROMETHEUS_METRICS_ENABLED=true
METRICS_PORT=9464

# Logging
LOG_FORMAT=json
LOG_CORRELATION_ENABLED=true
SENTRY_DSN=

# Elasticsearch (Optional)
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_INDEX=myco-logs

#===============================================================================
# RATE LIMITING & SECURITY
#===============================================================================

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false

# CORS Configuration
CORS_ORIGIN=http://localhost:5173,http://localhost:3000
CORS_CREDENTIALS=true

# Security Headers
HELMET_ENABLED=true
CSP_ENABLED=true

#===============================================================================
# CLOUD PROVIDER CONFIGURATION
#===============================================================================

# AWS (Optional)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=myco-platform-storage

# Google Cloud (Optional)
GOOGLE_CLOUD_PROJECT_ID=your-gcp-project-id
GOOGLE_CLOUD_KEY_FILE=path/to/service-account.json

# Azure (Optional)
AZURE_STORAGE_ACCOUNT=your-azure-storage-account
AZURE_STORAGE_KEY=your-azure-storage-key

#===============================================================================
# EMAIL & NOTIFICATIONS
#===============================================================================

# SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-email-password
FROM_EMAIL=noreply@myco.dev

# Webhook URLs
SLACK_WEBHOOK_URL=
DISCORD_WEBHOOK_URL=

#===============================================================================
# DEVELOPMENT & TESTING
#===============================================================================

# Test Database
TEST_DATABASE_URL=postgresql://postgres:password@localhost:5432/myco_platform_test

# Development Tools
HOT_RELOAD=true
SOURCE_MAPS=true
MOCK_AI_RESPONSES=false

# Feature Flags
FEATURE_COLLABORATION_ENABLED=true
FEATURE_AI_ASSISTANCE_ENABLED=true
FEATURE_EXECUTION_ENGINE_ENABLED=true
FEATURE_DEPLOYMENT_ENABLED=true

#===============================================================================
# PRODUCTION OVERRIDES (COMMENT OUT FOR DEVELOPMENT)
#===============================================================================

# Uncomment and modify for production deployment
# NODE_ENV=production
# DEBUG=false
# COOKIE_SECURE=true
# CORS_ORIGIN=https://yourdomain.com
# DATABASE_URL=postgresql://user:pass@prod-db:5432/myco_platform
# REDIS_URL=redis://prod-redis:6379/0
# JWT_SECRET=your-production-jwt-secret
# OPENAI_API_KEY=your-production-openai-key

#===============================================================================
# DOCKER COMPOSE OVERRIDES
#===============================================================================

# These are used by docker-compose.yml
COMPOSE_PROJECT_NAME=myco-platform
COMPOSE_FILE=docker-compose.yml

# Volume Mounts
POSTGRES_DATA_PATH=./data/postgres
MONGODB_DATA_PATH=./data/mongodb
REDIS_DATA_PATH=./data/redis
ELASTICSEARCH_DATA_PATH=./data/elasticsearch

#===============================================================================
# KUBERNETES CONFIGURATION (FOR K8S DEPLOYMENT)
#===============================================================================

# Namespace
K8S_NAMESPACE=myco-platform

# Image Tags
BACKEND_IMAGE_TAG=latest
AI_ENGINE_IMAGE_TAG=latest
EXECUTION_ENGINE_IMAGE_TAG=latest
FRONTEND_IMAGE_TAG=latest

# Resource Limits
BACKEND_CPU_LIMIT=1000m
BACKEND_MEMORY_LIMIT=2Gi
AI_ENGINE_CPU_LIMIT=2000m
AI_ENGINE_MEMORY_LIMIT=4Gi