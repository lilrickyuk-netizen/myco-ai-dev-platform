# MYCO Platform Environment Configuration
# Copy this file to .env and update the values for your environment

# =============================================================================
# ENVIRONMENT SETTINGS
# =============================================================================
NODE_ENV=development
LOG_LEVEL=info

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL (Primary Database)
DATABASE_URL=postgres://postgres:postgres@localhost:5432/myco_dev
DB_HOST=localhost
DB_PORT=5432
DB_NAME=myco_dev
DB_USER=postgres
DB_PASSWORD=postgres
DB_SSL=false
DB_MAX_CONNECTIONS=10

# Redis (Cache & Sessions)
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# MongoDB (Documents & Templates)
MONGODB_URL=mongodb://root:mongodb@localhost:27017/myco_dev?authSource=admin
MONGODB_HOST=localhost
MONGODB_PORT=27017
MONGODB_DATABASE=myco_dev
MONGODB_USERNAME=root
MONGODB_PASSWORD=mongodb

# =============================================================================
# APPLICATION SECRETS
# =============================================================================

# JWT Configuration (REQUIRED - Change in production!)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Encryption Keys (REQUIRED)
ENCRYPTION_KEY=your-32-char-encryption-key-here
HASH_SALT_ROUNDS=12

# Session Configuration
SESSION_SECRET=your-session-secret-change-this
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_MAX_AGE=86400000

# =============================================================================
# AI PROVIDER API KEYS
# =============================================================================

# OpenAI (Recommended)
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_ORG_ID=

# Anthropic Claude
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here

# Google Gemini
GOOGLE_API_KEY=your-google-api-key-here

# Cohere
COHERE_API_KEY=your-cohere-api-key-here

# Hugging Face
HUGGINGFACE_API_KEY=hf_your-huggingface-token-here

# Default AI Provider (openai, anthropic, google, cohere, local)
DEFAULT_AI_PROVIDER=openai
DEFAULT_AI_MODEL=gpt-4

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================

# Vector Database (ChromaDB)
VECTOR_DB_URL=http://localhost:8001
CHROMA_HOST=localhost
CHROMA_PORT=8001

# Object Storage (MinIO S3-compatible)
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET=myco-files
S3_REGION=us-east-1

# Email Service (Production: Use SendGrid, AWS SES, etc.)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASS=
SMTP_FROM=noreply@myco.dev
SMTP_SECURE=false

# =============================================================================
# AUTHENTICATION PROVIDERS (OAuth)
# =============================================================================

# GitHub OAuth
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Discord OAuth
DISCORD_CLIENT_ID=your-discord-client-id
DISCORD_CLIENT_SECRET=your-discord-client-secret

# =============================================================================
# SERVICE CONFIGURATION
# =============================================================================

# Backend API
BACKEND_PORT=3001
BACKEND_HOST=0.0.0.0
API_BASE_URL=http://localhost:3001

# Frontend
FRONTEND_PORT=3000
FRONTEND_HOST=0.0.0.0
VITE_API_URL=http://localhost:3001
VITE_WS_URL=ws://localhost:3001
VITE_AI_ENGINE_URL=http://localhost:8000

# AI Engine
AI_ENGINE_PORT=8000
AI_ENGINE_HOST=0.0.0.0
AI_ENGINE_URL=http://localhost:8000
AI_ENGINE_WORKERS=1
AI_ENGINE_DEBUG=true

# Execution Engine
EXECUTION_ENGINE_PORT=3002
EXECUTION_ENGINE_HOST=0.0.0.0
EXECUTION_ENGINE_URL=http://localhost:3002
MAX_CONCURRENT_JOBS=5
JOB_TIMEOUT=30000
MEMORY_LIMIT=128m
CPU_LIMIT=0.5

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:8000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security Headers
HELMET_ENABLED=true
CSRF_PROTECTION=true

# =============================================================================
# MONITORING & OBSERVABILITY
# =============================================================================

# Prometheus Metrics
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# Grafana
GRAFANA_PORT=3001
GRAFANA_ADMIN_PASSWORD=admin

# Elasticsearch & Kibana
ELASTICSEARCH_URL=http://localhost:9200
KIBANA_PORT=5601

# Sentry (Error Monitoring)
SENTRY_DSN=
SENTRY_ENVIRONMENT=development

# Application Insights (Optional)
APPINSIGHTS_INSTRUMENTATIONKEY=

# =============================================================================
# DEVELOPMENT TOOLS
# =============================================================================

# Hot Reload
VITE_HMR_PORT=24678
CHOKIDAR_USEPOLLING=false

# Debug Configuration
DEBUG=myco:*
DEBUG_COLORS=true

# Testing
TEST_DATABASE_URL=postgres://postgres:postgres@localhost:5432/myco_test
TEST_REDIS_URL=redis://localhost:6379/1

# =============================================================================
# DOCKER & DEPLOYMENT
# =============================================================================

# Docker Configuration
DOCKER_HOST=unix:///var/run/docker.sock
DOCKER_REGISTRY=
DOCKER_IMAGE_TAG=latest

# Container Limits
CONTAINER_MEMORY_LIMIT=512m
CONTAINER_CPU_LIMIT=1
CONTAINER_TIMEOUT=300

# =============================================================================
# CLOUD PROVIDER CONFIGURATION
# =============================================================================

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=
AWS_CLOUDFRONT_DOMAIN=

# Google Cloud Configuration
GOOGLE_CLOUD_PROJECT=
GOOGLE_APPLICATION_CREDENTIALS=

# Azure Configuration
AZURE_STORAGE_ACCOUNT=
AZURE_STORAGE_KEY=
AZURE_CONTAINER_NAME=

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# AI Features
ENABLE_AI_GENERATION=true
ENABLE_CODE_COMPLETION=true
ENABLE_SEMANTIC_SEARCH=true

# Collaboration Features
ENABLE_REAL_TIME_COLLABORATION=true
ENABLE_VIDEO_CHAT=false
ENABLE_SCREEN_SHARING=false

# Development Features
ENABLE_HOT_RELOAD=true
ENABLE_SOURCE_MAPS=true
ENABLE_DETAILED_ERRORS=true

# Security Features
ENABLE_2FA=false
ENABLE_SSO=false
ENABLE_AUDIT_LOGGING=true

# =============================================================================
# PERFORMANCE TUNING
# =============================================================================

# Cache Configuration
CACHE_TTL=3600
CACHE_MAX_SIZE=1000
ENABLE_REDIS_CACHE=true

# API Limits
MAX_REQUEST_SIZE=50mb
MAX_FILE_SIZE=100mb
MAX_PROJECTS_PER_USER=100

# Concurrency Limits
MAX_CONCURRENT_BUILDS=5
MAX_CONCURRENT_DEPLOYMENTS=3
MAX_WEBSOCKET_CONNECTIONS=1000

# =============================================================================
# BACKUP & RECOVERY
# =============================================================================

# Backup Configuration
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=myco-backups

# =============================================================================
# COMPLIANCE & LEGAL
# =============================================================================

# Privacy & GDPR
GDPR_COMPLIANCE=true
COOKIE_CONSENT_REQUIRED=true
DATA_RETENTION_DAYS=365

# Terms & Conditions
TERMS_URL=https://myco.dev/terms
PRIVACY_URL=https://myco.dev/privacy

# =============================================================================
# CUSTOM CONFIGURATION
# =============================================================================

# Organization Settings
DEFAULT_ORG_NAME=MYCO Development
DEFAULT_ORG_DOMAIN=myco.dev

# Branding
APP_NAME=MYCO Platform
APP_DESCRIPTION=AI-Powered Development Platform
APP_URL=https://myco.dev
SUPPORT_EMAIL=support@myco.dev

# =============================================================================
# VALIDATION NOTES
# =============================================================================

# REQUIRED VARIABLES (Application will not start without these):
# - JWT_SECRET
# - DATABASE_URL
# - At least one AI provider API key (OPENAI_API_KEY recommended)

# RECOMMENDED FOR PRODUCTION:
# - Change all default passwords and secrets
# - Set up proper SSL certificates
# - Configure monitoring and alerting
# - Set up backup procedures
# - Enable security features (2FA, audit logging)

# DEVELOPMENT ONLY:
# - SMTP uses MailHog for local email testing
# - Databases use default credentials
# - Debug features are enabled