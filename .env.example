# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/myco_platform
MONGODB_URL=mongodb://admin:password@localhost:27017/myco_platform?authSource=admin
REDIS_URL=redis://localhost:6379/0

# AI Engine Configuration
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
GOOGLE_API_KEY=your_google_api_key_here
WEAVIATE_URL=http://localhost:8080
OLLAMA_BASE_URL=http://localhost:11434

# Authentication
JWT_SECRET=your_jwt_secret_here_at_least_32_characters_long
JWT_EXPIRY=24h
REFRESH_TOKEN_EXPIRY=7d

# Clerk Authentication (Frontend)
CLERK_PUBLISHABLE_KEY=your_clerk_publishable_key_here
CLERK_SECRET_KEY=your_clerk_secret_key_here

# Service URLs
BACKEND_URL=http://localhost:3000
AI_ENGINE_URL=http://localhost:8000
EXECUTION_ENGINE_URL=http://localhost:8001
FRONTEND_URL=http://localhost:5173

# WebSocket
WS_URL=ws://localhost:3000

# Security
CORS_ORIGINS=http://localhost:5173,http://localhost:3000
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001

# Docker Configuration
DOCKER_SOCKET=/var/run/docker.sock

# File Storage
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads

# Email (Optional - for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_email_password

# Development
NODE_ENV=development
DEBUG=true
HOT_RELOAD=true

# Production
SSL_CERT_PATH=/etc/ssl/certs/cert.pem
SSL_KEY_PATH=/etc/ssl/private/key.pem