# Environment Configuration
NODE_ENV=development
VERSION=1.0.0
SERVICE_NAME=myco-platform

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/myco_platform
MONGODB_URL=mongodb://admin:password@localhost:27017/myco_platform?authSource=admin
REDIS_URL=redis://localhost:6379/0

# Authentication (Clerk)
CLERK_SECRET_KEY=your_clerk_secret_key_here
CLERK_PUBLISHABLE_KEY=pk_test_your_clerk_publishable_key_here
JWT_SECRET=your_super_secret_jwt_key_change_in_production

# AI/LLM Provider API Keys
OPENAI_API_KEY=sk-your_openai_api_key_here
ANTHROPIC_API_KEY=sk-ant-your_anthropic_api_key_here
GOOGLE_API_KEY=your_google_ai_api_key_here
COHERE_API_KEY=your_cohere_api_key_here
HUGGINGFACE_API_KEY=hf_your_huggingface_token_here

# Vector Store Configuration
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_ENVIRONMENT=us-west1-gcp
PINECONE_INDEX_NAME=myco-vectors
WEAVIATE_URL=http://localhost:8080
CHROMA_PERSIST_DIRECTORY=./data/chroma

# Local LLM Configuration
OLLAMA_BASE_URL=http://localhost:11434

# AI Engine Configuration
AI_ENGINE_URL=http://localhost:8000
AI_ENGINE_HOST=0.0.0.0
AI_ENGINE_PORT=8000
AI_ENGINE_WORKERS=4
AI_ENGINE_DEBUG=false
AI_ENGINE_LOG_LEVEL=INFO
AI_ENGINE_API_KEY=dev-key

# Execution Engine Configuration
EXECUTION_ENGINE_PORT=8001
DOCKER_SOCKET=/var/run/docker.sock
MAX_CONCURRENT_EXECUTIONS=10
EXECUTION_TIMEOUT=30
MAX_MEMORY_USAGE=512m
MAX_CPU_USAGE=1

# Security Configuration
ENABLE_AUTH=true
ENABLE_RATE_LIMITING=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# Monitoring Configuration
ENABLE_METRICS=true
METRICS_PORT=9090
PROMETHEUS_URL=http://localhost:9090
GRAFANA_URL=http://localhost:3001
GRAFANA_ADMIN_PASSWORD=admin

# Logging Configuration
LOG_LEVEL=INFO
ENABLE_STRUCTURED_LOGGING=true
LOG_DIR=./logs
ELASTICSEARCH_URL=http://localhost:9200

# Frontend Configuration
VITE_API_URL=http://localhost:3000
VITE_AI_ENGINE_URL=http://localhost:8000
VITE_WS_URL=ws://localhost:3000
VITE_CLERK_PUBLISHABLE_KEY=pk_test_your_clerk_publishable_key_here

# Cloud Provider Configuration (Optional)
# AWS
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=us-west-2
AWS_S3_BUCKET=myco-platform-storage

# Google Cloud Platform
GCP_PROJECT_ID=your_gcp_project_id
GCP_SERVICE_ACCOUNT_KEY=path/to/service-account-key.json
GCP_REGION=us-central1

# Azure
AZURE_SUBSCRIPTION_ID=your_azure_subscription_id
AZURE_RESOURCE_GROUP=myco-platform
AZURE_CLIENT_ID=your_azure_client_id
AZURE_CLIENT_SECRET=your_azure_client_secret
AZURE_TENANT_ID=your_azure_tenant_id

# Notification Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_email_password
NOTIFICATION_FROM_EMAIL=noreply@myco.dev

# Feature Flags
ENABLE_AI_FEATURES=true
ENABLE_COLLABORATION=true
ENABLE_CODE_EXECUTION=true
ENABLE_AGENT_ORCHESTRATION=true
ENABLE_ADVANCED_TEMPLATES=true
ENABLE_DEPLOYMENT=true

# Cache Configuration
CACHE_TTL=3600
CACHE_MAX_SIZE=1000
ENABLE_REDIS_CACHE=true
ENABLE_MEMORY_CACHE=true

# Development Configuration
DEBUG=false
HOT_RELOAD=true
SOURCE_MAPS=true
MINIFY_ASSETS=false

# Production Configuration (Override in production)
# NODE_ENV=production
# DEBUG=false
# HOT_RELOAD=false
# SOURCE_MAPS=false
# MINIFY_ASSETS=true
# ENABLE_COMPRESSION=true
# ENABLE_CDN=true

# Performance Configuration
MAX_REQUEST_SIZE=10mb
MAX_FILE_UPLOAD_SIZE=100mb
CONNECTION_TIMEOUT=30000
REQUEST_TIMEOUT=60000

# Session Configuration
SESSION_SECRET=your_session_secret_key_here
SESSION_TIMEOUT=86400
REMEMBER_ME_TIMEOUT=2592000

# Email Templates
WELCOME_EMAIL_TEMPLATE=welcome
PASSWORD_RESET_TEMPLATE=password-reset
INVITATION_EMAIL_TEMPLATE=invitation

# Analytics Configuration (Optional)
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
MIXPANEL_TOKEN=your_mixpanel_token
SEGMENT_WRITE_KEY=your_segment_write_key

# Error Tracking (Optional)
SENTRY_DSN=https://your_sentry_dsn@sentry.io/project_id
BUGSNAG_API_KEY=your_bugsnag_api_key

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=myco-platform-backups

# SSL Configuration
SSL_ENABLED=false
SSL_CERT_PATH=/path/to/cert.pem
SSL_KEY_PATH=/path/to/key.pem
SSL_CA_PATH=/path/to/ca.pem

# Load Balancer Configuration
LOAD_BALANCER_URL=https://myco.dev
HEALTH_CHECK_PATH=/health
HEALTH_CHECK_INTERVAL=30

# Compliance Configuration
GDPR_ENABLED=true
CCPA_ENABLED=true
DATA_RETENTION_DAYS=2555
AUDIT_LOG_RETENTION_DAYS=2555