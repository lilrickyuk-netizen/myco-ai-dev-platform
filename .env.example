# ===========================================
# MYCO AI DEVELOPMENT PLATFORM
# Environment Configuration
# ===========================================

# ===========================================
# DEVELOPMENT CONFIGURATION
# ===========================================
NODE_ENV=development
LOG_LEVEL=info

# ===========================================
# DATABASE CONFIGURATION
# ===========================================

# PostgreSQL Database
DATABASE_URL=postgres://postgres:postgres@localhost:5432/myco_dev
POSTGRES_DB=myco_dev
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# MongoDB (Documents & Templates)
MONGODB_URL=mongodb://root:mongodb@localhost:27017/myco_dev?authSource=admin
MONGO_INITDB_ROOT_USERNAME=root
MONGO_INITDB_ROOT_PASSWORD=mongodb
MONGO_INITDB_DATABASE=myco_dev

# Redis (Cache & Sessions)
REDIS_URL=redis://localhost:6379

# ===========================================
# AUTHENTICATION & SECURITY
# ===========================================

# Clerk Authentication
CLERK_SECRET_KEY=your_clerk_secret_key_here
CLERK_PUBLISHABLE_KEY=your_clerk_publishable_key_here
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=your_clerk_publishable_key_here

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# ===========================================
# LLM PROVIDER API KEYS
# ===========================================

# OpenAI
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic Claude
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Google AI
GOOGLE_API_KEY=your_google_api_key_here

# Cohere
COHERE_API_KEY=your_cohere_api_key_here

# Hugging Face
HUGGINGFACE_API_KEY=your_huggingface_api_key_here

# ===========================================
# CLOUD PROVIDER CONFIGURATION
# ===========================================

# AWS
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key_here
AWS_REGION=us-east-1

# Google Cloud Platform
GCP_PROJECT_ID=your_gcp_project_id_here
GCP_SERVICE_ACCOUNT_KEY=your_gcp_service_account_key_here

# Microsoft Azure
AZURE_SUBSCRIPTION_ID=your_azure_subscription_id_here
AZURE_RESOURCE_GROUP=your_azure_resource_group_here
AZURE_CLIENT_ID=your_azure_client_id_here
AZURE_CLIENT_SECRET=your_azure_client_secret_here
AZURE_TENANT_ID=your_azure_tenant_id_here

# ===========================================
# OAUTH CONFIGURATION
# ===========================================

# GitHub OAuth
GITHUB_CLIENT_ID=your_github_client_id_here
GITHUB_CLIENT_SECRET=your_github_client_secret_here

# Google OAuth
GOOGLE_OAUTH_CLIENT_ID=your_google_oauth_client_id_here
GOOGLE_OAUTH_CLIENT_SECRET=your_google_oauth_client_secret_here

# ===========================================
# VECTOR STORES & AI SERVICES
# ===========================================

# Pinecone
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_ENVIRONMENT=us-west1-gcp
PINECONE_INDEX_NAME=myco-vectors

# Weaviate
WEAVIATE_URL=http://localhost:8080

# ChromaDB
CHROMA_PERSIST_DIRECTORY=./data/chroma

# Ollama (Local LLM)
OLLAMA_BASE_URL=http://localhost:11434

# ===========================================
# OBJECT STORAGE
# ===========================================

# MinIO (S3-compatible)
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin
MINIO_ENDPOINT=localhost:9000
MINIO_USE_SSL=false
MINIO_BUCKET_NAME=myco-files

# ===========================================
# EMAIL CONFIGURATION
# ===========================================

# SMTP Configuration (for production)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here
SMTP_FROM_NAME=Myco Platform
SMTP_FROM_EMAIL=noreply@myco.dev

# Mailhog (for development)
MAILHOG_SMTP_HOST=localhost
MAILHOG_SMTP_PORT=1025

# ===========================================
# MONITORING & OBSERVABILITY
# ===========================================

# Sentry Error Tracking
SENTRY_DSN=your_sentry_dsn_here
SENTRY_ORG=your_sentry_org_here
SENTRY_PROJECT=your_sentry_project_here

# Prometheus Metrics
ENABLE_METRICS=true
METRICS_PORT=9090

# ===========================================
# SERVICE URLS & NETWORKING
# ===========================================

# Backend Services
AI_ENGINE_URL=http://localhost:8000
EXECUTION_ENGINE_URL=http://localhost:3002
BACKEND_URL=http://localhost:3001

# Frontend Configuration
FRONTEND_URL=http://localhost:3000
VITE_API_URL=http://localhost:3001
VITE_WS_URL=ws://localhost:3001
VITE_AI_ENGINE_URL=http://localhost:8000

# CORS Origins
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:3001

# ===========================================
# EXECUTION ENGINE CONFIGURATION
# ===========================================

# Docker Configuration
DOCKER_HOST=unix:///var/run/docker.sock
MAX_CONCURRENT_JOBS=5
JOB_TIMEOUT=30000
MEMORY_LIMIT=128m
CPU_LIMIT=0.5

# ===========================================
# AI ENGINE CONFIGURATION
# ===========================================

# Server Configuration
AI_ENGINE_HOST=0.0.0.0
AI_ENGINE_PORT=8000
AI_ENGINE_WORKERS=4
AI_ENGINE_DEBUG=true
AI_ENGINE_LOG_LEVEL=info

# Generation Settings
DEFAULT_MODEL=gpt-4
MAX_TOKENS=4000
DEFAULT_TEMPERATURE=0.7
MAX_CONCURRENT_REQUESTS=10

# Agent Settings
AGENT_TIMEOUT=300
MAX_AGENT_RETRIES=3

# Cache Settings
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# File Upload
UPLOAD_DIR=./data/uploads
MAX_FILE_SIZE=104857600

# ===========================================
# DEVELOPMENT & TESTING
# ===========================================

# Mock Settings
ENABLE_MOCK_RESPONSES=false
MOCK_RESPONSE_DELAY=0.5

# Security Settings
ENABLE_AUTH=true
ALLOWED_API_KEYS=

# Feature Flags
ENABLE_COLLABORATION=true
ENABLE_AI_ASSISTANT=true
ENABLE_ADVANCED_TEMPLATES=true
ENABLE_DEPLOYMENT=true
ENABLE_AGENTS=true

# ===========================================
# PRODUCTION OVERRIDES
# (These will be overridden in production)
# ===========================================

# Production Database URLs will be different
# Production API keys will be different
# Production domains will be different