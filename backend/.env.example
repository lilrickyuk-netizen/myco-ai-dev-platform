# Encore.ts Backend Environment Variables

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/myco_platform
REDIS_URL=redis://localhost:6379/0
MONGODB_URL=mongodb://admin:password@localhost:27017/myco_platform?authSource=admin

# Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production
CLERK_SECRET_KEY=your-clerk-secret-key

# External Services
AI_ENGINE_URL=http://localhost:8000
EXECUTION_ENGINE_URL=http://localhost:8001

# Environment
NODE_ENV=development
ENCORE_ENDPOINT_URL=http://localhost:4000

# Optional: Rate limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Optional: CORS Origins
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173