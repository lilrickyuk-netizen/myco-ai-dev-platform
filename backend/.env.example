# ===========================================
# MYCO BACKEND - ENCORE.TS CONFIGURATION
# ===========================================

# ===========================================
# SERVER CONFIGURATION
# ===========================================
NODE_ENV=development
PORT=3001
LOG_LEVEL=info

# ===========================================
# DATABASE CONFIGURATION
# ===========================================

# PostgreSQL (Primary Database)
DATABASE_URL=postgres://postgres:postgres@localhost:5432/myco_dev

# MongoDB (Documents & Templates) 
MONGODB_URL=mongodb://root:mongodb@localhost:27017/myco_dev?authSource=admin

# Redis (Cache & Sessions)
REDIS_URL=redis://localhost:6379

# ===========================================
# AUTHENTICATION & SECURITY
# ===========================================

# Clerk Authentication (Required)
ClerkSecretKey=your_clerk_secret_key_here

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# ===========================================
# EXTERNAL SERVICE URLS
# ===========================================

# AI Engine URL
AI_ENGINE_URL=http://localhost:8000

# Execution Engine URL  
EXECUTION_ENGINE_URL=http://localhost:3002

# ===========================================
# CORS & NETWORKING
# ===========================================

# Allowed Origins for CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# ===========================================
# OBJECT STORAGE
# ===========================================

# MinIO Configuration (S3-compatible)
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_USE_SSL=false
MINIO_BUCKET_NAME=myco-files

# ===========================================
# EMAIL CONFIGURATION
# ===========================================

# SMTP Configuration for notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here
SMTP_FROM_NAME=Myco Platform
SMTP_FROM_EMAIL=noreply@myco.dev

# ===========================================
# MONITORING & OBSERVABILITY
# ===========================================

# Sentry Error Tracking
SENTRY_DSN=your_sentry_dsn_here

# Enable Metrics Collection
ENABLE_METRICS=true

# ===========================================
# FEATURE FLAGS
# ===========================================

# Enable/Disable Features
ENABLE_COLLABORATION=true
ENABLE_AI_ASSISTANT=true
ENABLE_ADVANCED_TEMPLATES=true
ENABLE_DEPLOYMENT=true
ENABLE_AGENTS=true

# ===========================================
# RATE LIMITING
# ===========================================

# API Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# ===========================================
# FILE UPLOAD CONFIGURATION
# ===========================================

# Upload Settings
MAX_FILE_SIZE=104857600
UPLOAD_DIR=./uploads

# ===========================================
# DEVELOPMENT SETTINGS
# ===========================================

# Debug Mode
DEBUG=true

# Enable Development Logging
ENABLE_DEV_LOGGING=true

# Mock External Services (for testing)
ENABLE_MOCK_SERVICES=false