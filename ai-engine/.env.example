# AI Engine Environment Variables

# Server Configuration
AI_ENGINE_HOST=0.0.0.0
AI_ENGINE_PORT=8000
AI_ENGINE_WORKERS=4
AI_ENGINE_DEBUG=false
AI_ENGINE_LOG_LEVEL=INFO

# CORS Settings
AI_ENGINE_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/myco_ai
MONGODB_URL=mongodb://localhost:27017/myco_ai
REDIS_URL=redis://localhost:6379/1

# LLM Provider API Keys
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key
GOOGLE_API_KEY=your-google-api-key
COHERE_API_KEY=your-cohere-api-key
HUGGINGFACE_API_KEY=your-huggingface-api-key

# Local LLM Configuration
OLLAMA_BASE_URL=http://localhost:11434

# Vector Store Configuration
WEAVIATE_URL=http://localhost:8080
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_ENVIRONMENT=us-west1-gcp
PINECONE_INDEX_NAME=myco-vectors
CHROMA_PERSIST_DIRECTORY=./data/chroma

# Cache Configuration
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Authentication
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Generation Settings
DEFAULT_MODEL=gpt-4
MAX_TOKENS=4000
DEFAULT_TEMPERATURE=0.7
MAX_CONCURRENT_REQUESTS=10

# Agent Settings
AGENT_TIMEOUT=300
MAX_AGENT_RETRIES=3

# File Storage
UPLOAD_DIR=./data/uploads
MAX_FILE_SIZE=104857600

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Security
ENABLE_AUTH=true
ALLOWED_API_KEYS=

# Development Settings
ENABLE_MOCK_RESPONSES=false
MOCK_RESPONSE_DELAY=0.5

# Cloud Provider Configuration (Optional)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1

GCP_PROJECT_ID=your-gcp-project-id
GCP_SERVICE_ACCOUNT_KEY=your-gcp-service-account-key

AZURE_SUBSCRIPTION_ID=your-azure-subscription-id
AZURE_RESOURCE_GROUP=your-azure-resource-group
AZURE_CLIENT_ID=your-azure-client-id
AZURE_CLIENT_SECRET=your-azure-client-secret
AZURE_TENANT_ID=your-azure-tenant-id

# OAuth Configuration (Optional)
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
GOOGLE_OAUTH_CLIENT_ID=your-google-oauth-client-id
GOOGLE_OAUTH_CLIENT_SECRET=your-google-oauth-client-secret